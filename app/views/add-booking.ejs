<h1 class="text-2xl font-bold mb-4">Add Booking</h1>

<form action="/bookings/add" method="POST" class="space-y-4">
  
 <label>Session:</label>
<select name="session_id" class="border p-2 w-full" required>
  <% sessions.forEach(s => { %>
<option value="<%= s.id %>" <%= (typeof selectedSessionId !== 'undefined' && s.id == selectedSessionId) ? 'selected' : '' %>>
        <%= new Date(s.session_date).toLocaleDateString('tr-TR') %>
        — <%= new Date(s.session_date).toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' }) %>
        | <%= s.location %>
        <% if (s.trainer_name) { %> — Trainer: <%= s.trainer_name %><% } %>
        </option>

  <% }) %>
</select>


  <label>Booking Date:</label>
  <input type="date" name="booking_date" class="border p-2 w-full" required>

  </select>

  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Add</button>
</form>

