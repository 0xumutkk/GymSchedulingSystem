<h1 class="text-2xl font-bold mb-4">Add Session</h1>

<form action="/sessions/add" method="POST" class="space-y-4">
  <label class="block">Date and Time</label>
  <input type="datetime-local" name="session_date" required class="border p-2 w-full">

  <label class="block">Duration (minutes)</label>
  <input type="number" name="duration_min" class="border p-2 w-full">

  <label class="block">Location</label>
  <input type="text" name="location" class="border p-2 w-full">

  <label class="block">Trainer</label>
  <select name="trainer_id" class="border p-2 w-full" required>
    <option value="">Select Trainer</option>
    <% trainers.forEach(tr => { %>
      <option value="<%= tr.id %>"><%= tr.name %></option>
    <% }) %>
  </select>

  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Add</button>
</form>
