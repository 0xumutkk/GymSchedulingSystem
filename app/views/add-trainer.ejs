<h1 class="text-2xl font-bold mb-4">Add Trainer</h1>

<form action="/trainers/add" method="POST" class="space-y-4">
  <input type="text" name="name" placeholder="Full Name" required class="border p-2 w-full">
  <input type="email" name="email" placeholder="Email" required class="border p-2 w-full">
  <input type="text" name="specialty" placeholder="Specialty" class="border p-2 w-full">
  <input type="date" name="hire_date" class="border p-2 w-full">
  <input type="number" step="0.01" name="salary" placeholder="Salary" class="border p-2 w-full">
  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Add</button>
</form>
