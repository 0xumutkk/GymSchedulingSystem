<h1 class="text-2xl font-bold mb-4">Admin Login</h1>

<form action="/admin-login" method="POST" class="space-y-4">
  <% if (error) { %><div class="text-red-600"><%= error %></div><% } %>

  <input type="text" name="username" placeholder="Admin Username" class="border p-2 w-full">
  <input type="password" name="password" placeholder="Admin Password" class="border p-2 w-full">
  <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded">Login</button>
</form>
