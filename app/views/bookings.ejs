<h1 class="text-2xl font-bold mb-4">Bookings</h1>


 <% if (isAdmin) { %>
  <a href="/bookings/admin/add" class="bg-green-500 text-white px-4 py-2 rounded">➕ Add Booking (Admin)</a>
<% } else { %>
  <a href="/bookings/add" class="bg-green-500 text-white px-4 py-2 rounded">➕ Add Booking</a>
<% } %>

<table class="table-auto w-full border mt-4">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2">Member</th>
      <th class="px-4 py-2">Session Date</th>
      <th class="px-4 py-2">Booking Date</th>
      <th class="px-4 py-2">Status</th>
      <th class="px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% bookings.forEach(b => { %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= b.member_name %></td>
        <td class="px-4 py-2"><%= new Date(b.session_date).toLocaleString() %></td>
        <td class="px-4 py-2"><%= new Date(b.booking_date).toLocaleDateString() %></td>
        <td class="px-4 py-2"><%= b.status %></td>
        <td class="px-4 py-2">
    <% if (isAdmin) { %>
         <a href="/bookings/edit/<%= b.booking_id %>" class="text-blue-600 hover:underline">Edit</a> |
        <a href="/bookings/delete/<%= b.booking_id %>" class="text-red-600 hover:underline" onclick="return confirm('Are you sure?')">Delete</a>
     <% } else { %>
        <span class="text-gray-400 italic">Restricted</span>
     <% } %>
    </td>
      </tr>
    <% }) %>
  </tbody>
</table>
