<h1 class="text-2xl font-bold mb-6">✏️ Edit Trainer</h1>

<form method="POST" action="/trainers/edit/<%= trainer.id %>" class="max-w-md mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <input name="name" value="<%= trainer.name %>" required class="input mb-4" />
  <input type="email" name="email" value="<%= trainer.email %>" required class="input mb-4" />
  <input name="specialty" value="<%= trainer.specialty %>" class="input mb-4" />
  <input type="date" name="hire_date" value="<%= trainer.hire_date ? trainer.hire_date.toISOString().split('T')[0] : '' %>" class="input mb-4" />
  <input type="number" name="salary" value="<%= trainer.salary %>" step="0.01" class="input mb-6" />
  
  <button type="submit" class="btn-green">Update</button>
</form>
