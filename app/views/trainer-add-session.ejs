<h1 class="text-2xl font-bold mb-6 text-center">➕ Add New Session</h1>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="bg-red-100 border border-red-300 text-red-700 p-3 rounded mb-4">
    <strong>Error:</strong> <%= error %>
  </div>
<% } %>
<form method="POST" action="/trainers/sessions/add" class="max-w-lg mx-auto bg-white p-8 shadow-md rounded space-y-6">
 
  <label for="session_date" class="block">Date and Time</label>
  <input id="session_date" name="session_date" required class="w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" />

  <script>
    flatpickr("#session_date", {
      enableTime: true,
      time_24hr: true,
      dateFormat: "Y-m-d H:i"
    });
  </script>

  <div>
<select name="duration_min" required class="border p-2 w-full rounded">
  <option value="" disabled selected>Select duration</option>
  <option value="15">15 minutes</option>
  <option value="30">30 minutes</option>
  <option value="45">45 minutes</option>
  <option value="60">60 minutes</option>
</select>
  </div>

  <div>
   <select name="location" required class="border border-gray-300 p-2 w-full rounded">
    <option value="" disabled selected>Select a location</option>
    <option value="Main Hall">Main Hall</option>
    <option value="Studio A">Studio A</option>
    <option value="Studio B">Studio B</option>
    <option value="Poolside">Poolside</option>
    <option value="Gym">Gym</option>
    <option value="Cardio Room">Cardio Room</option>
    <option value="Outdoor">Outdoor</option>
    <option value="Yoga Room">Yoga Room</option>
  </select>
 </div>

  <div class="flex justify-between items-center">
    <a href="/trainers/dashboard" class="text-blue-600 hover:underline text-sm">← Back to Dashboard</a>
    <button type="submit"
      class="bg-green-600 hover:bg-green-700 text-white font-semibold px-5 py-2 rounded shadow-sm">
      ➕ Add Session
    </button>
  </div>
</form>