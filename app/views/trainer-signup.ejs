<h1 class="text-2xl font-bold mb-4">Trainer Sign Up</h1>

<form action="/trainers/signup" method="POST" class="space-y-4 w-[400px]">
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="text-red-600 text-sm font-medium"><%= error %></div>
  <% } %>

  <input
    type="text"
    name="name"
    placeholder="Full Name"
    required
    class="border p-2 w-full rounded"
  />

  <input
    type="email"
    name="email"
    placeholder="Email"
    required
    class="border p-2 w-full rounded"
  />

  <input
    type="text"
    name="specialty"
    placeholder="Specialty"
    class="border p-2 w-full rounded"
  />

  <input
    type="password"
    name="password"
    placeholder="Password"
    required
    class="border p-2 w-full rounded"
  />

  <button
    type="submit"
    class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded"
  >
    Register
  </button>
</form>
