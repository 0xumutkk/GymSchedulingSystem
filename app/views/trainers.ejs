<h1 class="text-2xl font-bold mb-4">Trainer List</h1>

<% if (isAdmin) { %>
  <a href="/trainers/add" class="bg-green-500 text-white px-4 py-2 rounded">âž• Add Trainer</a>
<% } %>

<table class="table-auto w-full border border-gray-300 mt-4">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2">Name</th>
      <th class="px-4 py-2">Email</th>
      <th class="px-4 py-2">Specialty</th>
      <th class="px-4 py-2">Hire Date</th>
      <th class="px-4 py-2">Salary</th>
    </tr>
  </thead>
  <tbody>
    <% trainers.forEach(t => { %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= t.name %></td>
        <td class="px-4 py-2"><%= t.email %></td>
        <td class="px-4 py-2"><%= t.specialty %></td>
        <td class="px-4 py-2"><%= t.hire_date ? t.hire_date.toISOString().split('T')[0] : '' %></td>
        <td class="px-4 py-2"><%= t.salary %></td>
      </tr>
    <% }) %>
  </tbody>
</table>